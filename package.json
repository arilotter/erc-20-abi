{
  "name": "erc-20-monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Gabriel Montes",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "postinstall": "lerna bootstrap",
    "lerna:run": "lerna run --stream"
  },
  "devDependencies": {
    "check-tag-matches": "^1.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^4.3.8",
    "jsonlint": "^1.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "precinct": "^8.1.0",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">= 10"
  },
  "eslintConfig": {
    "env": {
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "mocha": true
        }
      }
    ],
    "rules": {
      "no-shadow": "warn",
      "no-use-before-define": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lerna:run lint && lint-staged",
      "pre-push": "npm run lerna:run test && npm run lerna:run deps:check"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint:fix",
    "*.{css,js,json,md}": "npm run format"
  },
  "prettier": {
    "editorconfig": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
